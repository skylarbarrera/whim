{
  "name": "ai-software-factory",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.2.15",
  "description": "Autonomous AI development system that takes GitHub issues, converts them to specs, and produces PRs",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  }
}
