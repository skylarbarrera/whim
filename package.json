{
  "name": "whim",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.2.15",
  "description": "Autonomous AI development system that takes GitHub issues, converts them to specs, and produces PRs",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "turbo run build",
    "dev": "./scripts/dev.sh",
    "dev:docker": "./scripts/dev.sh --docker",
    "test": "turbo run test",
    "lint": "eslint packages/*/src",
    "lint:fix": "eslint packages/*/src --fix",
    "format": "prettier --write packages/*/src",
    "format:check": "prettier --check packages/*/src",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.4.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0"
  }
}
